@model TodoItem

<form asp-action="AddItem" method="POST">
    <label asp-for="Title">Add a new item:</label>
    <input asp-for="Title">
    <button type="submit">Add</button>
    <input type="radio" name="Urgency" value=0 />Very
    <input type="radio" name="Urgency" value=1 />Normal
    <input type="radio" name="Urgency" value=2 />Less
    

</form>